<dl class="dl-horizontal fs-16">
  <dt>Date</dt>
  <dd><%= clean_order.date %></dd>
  <dt>Clean Plan</dt>
  <dd><%= clean_order.clean_plan.name %></dd>
  <dt>Clean Spots</dt>
  <dd><%= clean_order.clean_spot_images %></dd>
  <dt>Start Time</dt>
  <dd><%= start_time clean_order %></dd>
  <dt>End Time</dt>
  <dd><%= end_time clean_order %></dd>
  <dt>Note</dt>
  <dd><%= clean_order.note %></dd>
  <% if controller.class.parent == Operator %>
    <dt>Be in charge of</dt>
    <dd><%= link_to clean_order.staff.name, operator_staff_path(clean_order.staff) %></dd>
  <% end %>
</dl>
