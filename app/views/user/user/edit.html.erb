<%= display_errors current_user, User::PERMITTED_ATTRIBUTES, title: '個人情報の入力内容にエラーがあります。' %>

<div class="panel panel-default user-form">
  <div class="panel-heading">
    <h2 class="panel-title">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      Edit Profile
    </h2>
  </div>
  <div class="panel-body">
    <%= form_for current_user, url: user_account_path, method: :put, html: { class: 'form-horizontal', multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :avatar, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= f.file_field :avatar %>
        </div>
        <div class='col-sm-3'>
          <%= image_tag current_user.avatar_url, size: '100x100', class: 'img-circle' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :gender_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <% Gender.all.each do |g| %>
            <div class="radio-inline">
              <%= f.radio_button :gender_id, g.id %><%= g.name %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :age, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.select :age, ((10..100).map {|i| [i, i] }), {}, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :birthday, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :birthday, class: 'form-control', data: { provide: 'datepicker', 'date-format' => 'yyyy/mm/dd' } %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phone, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :zip, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :zip, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :state, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :state, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :city, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :street, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :street, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="text-center">
          <%= link_to '戻る', :back, class: 'btn btn-default' %>
          <%= f.submit '保存', class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
